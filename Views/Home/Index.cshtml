@model IEnumerable<EcommerceApp.Models.Item>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>

    <main class="main-content">
        <div class="banner">
            <p>DARMOWA WYSYŁKA OD 199 ZŁ</p>
            <p>PREZENT DLA ZAMÓWIEŃ OD 99 ZŁ</p>
        </div>

        <section class="recommended-products container">
            <h2>POLECANE</h2>
            <div class="products">
                @foreach (var item in Model)
                {
                    <div class="product">
                        <img src="@item.ImgUrl" alt="@item.Name">
                        <h3>@item.Name</h3>
                        <p class="price">@item.PriceId</p>
                        <button>Dodaj do koszyka</button>
                    </div>
                }
            </div>
        </section>

        <section class="promotions container">
            <div class="promotion">
                <img src="path/to/promo1.jpg" alt="Promocja 1">
                <p>PROMOCJA SOFT99 KIWAMI -30%</p>
            </div>
            <div class="promotion">
                <img src="path/to/promo2.jpg" alt="Promocja 2">
                <p>NAGRODA ZA OPINIĘ</p>
            </div>
        </section>
    </main>

    <footer class="footer">
        <p>&copy; 2024 Sklep Motogo</p>
    </footer>
</body>
</html>
